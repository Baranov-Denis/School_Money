<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.ExpensesPageFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:id="@+id/fragment_spend_money_list"
    android:tag="my_fragment_tag"
    android:paddingBottom="72dp"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spend_money_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ReceiptsPageFragment"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp">

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/add_new_spend_money_fab_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@android:drawable/ic_input_add"
    android:layout_gravity="end"
    app:tint="@null"
    app:backgroundTint="@null"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/textStyle"
    android:text="@string/Add_spend"/>
    </LinearLayout>
</FrameLayout>