<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.CreateNewParentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/BigText"
        android:text="@string/Enter_parent_name"/>

    <EditText
        android:id="@+id/enter_new_parent_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/BigText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/BigText"
        android:text="@string/Enter_parent_phone"/>

    <EditText
        android:id="@+id/enter_new_parent_phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/BigText"
        android:inputType="phone"/>

</LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button_on_create_parents_fragment"
            android:text="@string/Cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:background="@drawable/recycler_item_blue"
            android:layout_margin="4dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_button_on_create_parents_fragment"
            android:text="@string/Save"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:background="@drawable/recycler_item_blue"
            android:layout_margin="4dp"
            android:layout_weight="1"/>

    </LinearLayout>


</FrameLayout>